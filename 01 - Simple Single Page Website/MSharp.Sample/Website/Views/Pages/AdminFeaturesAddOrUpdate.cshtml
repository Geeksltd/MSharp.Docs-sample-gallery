@model ViewModel.FeatureFrm
<!-- «Start| FeatureFrm» -->
<form data-module="FeatureFrm" role="form" method="post" action="@Url.Current()" data-validation-style="tooltip" class="input-form">
   @Html.AntiForgeryToken()
   @Html.StartupActionsJson()
   <h2>Feature details</h2>
   <div class="form-body">
      <div class="form-group row required-item">
         <label for="Title" class="control-label">
            Title
         </label>
         <div class="group-control">
            <input type="text" asp-for="Title" class="form-control" autofocus="autofocus" />
         </div>
      </div>
      <div class="form-group row required-item">
         <label for="Description" class="control-label">
            Description
         </label>
         <div class="group-control">
            <input type="text" asp-for="Description" class="form-control" />
         </div>
      </div>
   </div>
   <div class="buttons-row">
      <div class="buttons">
         <button type="button" name="Cancel" class="btn btn-secondary" onclick="return page.goBack(this);" data-redirect="ajax">Cancel</button>
         <button type="submit" name="Save" class="btn btn-primary" formaction='@Url.ActionWithQuery("FeatureFrm/Save")' default-button="true"><i class="fas fa-check"></i>
            Save</button>
      </div>
   </div>
</form>
<!-- «End| FeatureFrm» -->
