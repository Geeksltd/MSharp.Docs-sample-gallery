@model ViewModel.TestimonyLst

<!-- «Start| TestimonyLst» -->
<div data-module="TestimonyLst">
   @Html.StartupActionsJson()
   @if (Model.Items.Any())
   {
   <div class='list-items'>
      @foreach (var listItem in Model.Items)
      {
      var item = listItem.Item;
      <div class='item'>
         <img src='@item.Image' />
         <p>
            @item.Content
         </p>
         <strong>
            @item.Name
         </strong>
         <span>
            @item.Position
         </span>
      </div>
      }
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no testimonies to display.
   </div>
   }
   <ul>
   </ul>
</div>
<!-- «End| TestimonyLst» -->

