@model ViewModel.ClientLst

<!-- «Start| ClientLst» -->
<div data-module="ClientLst">
   @Html.StartupActionsJson()
   @if (Model.Items.Any())
   {
   <div class='list-items'>
      @foreach (var listItem in Model.Items)
      {
      var item = listItem.Item;
      <div class='item'>
         <span title='@item.Name' style='background-image:url(@item.Image)'>
         </span>
      </div>
      }
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no clients to display.
   </div>
   }
</div>
<!-- «End| ClientLst» -->

