@model ViewModel.FeatureLst

<!-- «Start| FeatureLst» -->
<div data-module="FeatureLst">
   @Html.StartupActionsJson()
   @if (Model.Items.Any())
   {
   <div class='list-items'>
      @foreach (var listItem in Model.Items)
      {
      var item = listItem.Item;
      <div class='item'>
         <div>
            <h2>@item.Title</h2>
            <p>
               @item.Description
            </p>
         </div>
      </div>
      }
   </div>
   }
   @if (Model.Items.None())
   {
   <div class="empty-list">
      There are no features to display.
   </div>
   }
</div>
<!-- «End| FeatureLst» -->

